<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EMVCardLabelStyle">
        <item name="android:fontFamily">@font/cc_regular</item>
        <item name="android:textSize">@dimen/emv_card_thumb_label_size</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="EMVCardTextStyle">
        <item name="android:fontFamily">@font/cc_regular</item>
        <item name="android:textSize">@dimen/emv_card_thumb_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="InfoLabelStyle">
        <item name="android:textStyle">bold</item>
    </style>
</resources>